#include<stdio.h>
#include<conio.h>
#include<graphics.h>
#include<dos.h>
void plott(int x,int y){
	putpixel(x,y,7);
	putpixel(-x,y,7);
	putpixel(-x,-y,7);
	putpixel(x,-y,7);
	putpixel(y,x,7);
	putpixel(-y,-x,7);
	putpixel(y,-x,7);
	putpixel(-y,x,7);
}
void drawcircle(int x_c,int y_c,int r){
	int p=1-r;
	int x=0,y=r;
	while(x<=y){
		plott(x+x_c,y+y_c);
		x++;
		if(p<0){
			p=p+(2*x)+1;
		}
		if(p>0){
			y=y-1;
			p=p+(2*x)+1-(2*y);
		}
	}
}
void main(){
	int gd=DETECT,gm,x_c,y_c,r;
	initgraph(&gd,&gm,"C:\\TC\\BGI");
	cleardevice();
	printf("Enter centre:");
	scanf("%d%d",&x_c,&y_c);
	printf("Enter radius:");
	scanf("%d",&r);
	drawcircle(x_c,y_c,r);
	getch();
	closegraph();
}